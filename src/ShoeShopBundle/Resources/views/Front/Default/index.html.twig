{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for buty in pagination %}
                <a href="{{ url('app_front_default_show', {id: buty.id}) }}">
                    <div class="col-md-3">
                        <div class="obrazek" style="background-image:  url('{{ asset('uploads/img/' ~ buty.zdjecieMIN) }}');"></div>
                            <h2 class="marka">
                                {{ buty.marka }}
                            </h2>
                            <h3 class="model">
                                {{ buty.model }}
                            </h3>
                            <h4 class="cena">
                                Cena: {{ buty.cena }} zl
                            </h4>


                    {% if loop.index is divisible by(3) %}
                        </div></a><div class="row">
                    {% else %}
                        </div></a>
                    {% endif %}

            {% endfor %}
        </div>
    </div>

    {{ knp_pagination_render(pagination, "ShoeShopBundle:Front:pagination.html.twig") }}


{% endblock %}