{% extends 'base.html.twig' %}

{% block body %}
    <div class="adm-index">
    {% if shoes %}
    <h2>Lista produktow</h2>

    <table>
        <thead>
            <tr>
                <th>Zdjecie</th>
                <th>Id</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Kolor</th>
                <th>Cena</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
        {% for buty in shoes %}

            <tr>
                <td class="buty-zdj"><img src="{{ asset('uploads/img/' ~ buty.zdjecieMIN) }}"></td>
                <td>{{ buty.id }}</td>
                <td>{{ buty.marka }}</td>
                <td>{{ buty.model }}</td>
                <td>{{ buty.kolor }}</td>
                <td>{{ buty.cena }}</td>
                <td class="akcje">
                    <ul>
                        <li>
                            <a href="{{ path('app_admin_buty_show', { 'id': buty.id }) }}">Pokaz</a>
                        </li>
                        <li>
                            <a href="{{ path('app_admin_buty_edit', { 'id': buty.id }) }}">Edytuj</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <div class="empty">Brak produktow w bazie</div>
{% endif %}

    <ul class="add-product">
        <li>
            <a href="{{ path('app_admin_buty_new') }}">Dodaj nowy produkt</a>
        </li>
    </ul>
    </div>
{% endblock %}
